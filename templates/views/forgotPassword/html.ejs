                                                                                                        align="center"
                                                                                                        border="0"
                                                                                                        cellspacing="0"
                                                                                                        width="100%">
																											<tbody>
																												<!-- Header tr -->
																												<tr>
																													<td
                                                                                                                    valign="top">
																														<!-- Header partial --><%- include("../../partials/header.ejs") %>
																													</td>
																												</tr>
																												<!--  Banner heading -->
																												<tr>
																													<%- include("../../partials/banner.ejs",
                                                                                                                    {text: "RESET PASSWORD"
                                                                                                                    })
                                                                                                                    %>
																												</tr>
																												<!-- Hi there tr -->
																												<tr>
																													<td>
																														<table
                                                                                                                        align="left"
                                                                                                                        border="0"
                                                                                                                        cellspacing="0">
																															<tbody>
																																<tr>
                                                                                                                                    <td valign="top"
                                                                                                                                    class="mobile__username"
                                                                                                                                    style="padding: 60px 40px 0 40px; color: #02433C;font-size:18px;font-weight:bold;text-align:left;word-break:break-word;padding-bottom: 40px;">
																																		<font
                                                                                                                                        face="sans-serif">

                                                                                                                                        Hi
                                                                                                                                        <%= name %>,

																																		</font>
																																	</td>
																																</tr>
																																<tr>
                                                                                                                                    <td valign="top"
                                                                                                                                     class="mobile__bodyText"
                                                                                                                                    style="color: #02433C;font-size:18px;font-weight:bold;text-align:left;word-break:break-word;padding:0 40px 40px 40px;">
																																		<font
                                                                                                                                        face="sans-serif">

                                                                                                                                        Please follow this <a style="color: #F5999E;"                                                                                                                                            href="<%= resetPasswordLink %>">link</a> to reset your password.
                                                                                                                                    </font>
																																	</td>
																																</tr>
																															</tbody>
																														</table>
																													</td>
																												</tr>
																												<!-- Simply people Team -->
																												<tr>
																													<td class="mobile__greeting"
                                                                                                                    style="box-sizing: border-box;padding:0 40px 40px 40px;">
																														<table
                                                                                                                        align="left"
                                                                                                                        border="0"
                                                                                                                        cellspacing="0">
																															<tbody>
																																<tr>
																																	<td valign="top"
                                                                                                                                    style="color: #02433C;font-size:18px;text-align:left;word-break:break-word;font-weight:bold;">
