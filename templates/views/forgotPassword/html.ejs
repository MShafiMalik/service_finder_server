    <style type="text/css">
        @media only screen and (max-width: 425px) {

            .content__message * {
                font-size: 16px !important;
            }

            .mobile__bodyText {
                padding: 0 12px 40px 12px !important;
            }

            .mobile__username {
                  padding: 40px 12px !important;
            }
            .mobile__greeting {
                  padding: 0 12px 40px 12px !important;
            }

               .mobile__mainContainer {
                padding: 0 0 40px 0 !important;
            }

             .mobile__verifybtn--main {
                width: 100%;
                padding: 0 12px;
            }

            .mobile__verifybtn {
                width: 100%;
            }

        }
    </style>
